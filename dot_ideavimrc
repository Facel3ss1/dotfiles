""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'vim-scripts/argtextobj.vim'
Plug 'machakann/vim-highlightedyank'
Plug 'kana/vim-textobj-entire'
Plug 'preservim/nerdtree'

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"

""" Common settings -------------------------
set showmode
set scrolloff=10
set sidescrolloff=5
set hlsearch
set ignorecase
set smartcase
set incsearch
set number
set visualbell

""" Idea specific settings ------------------
set ideajoin
" set ideastatusicon=gray
set idearefactormode=keep

""" Mappings --------------------------------
map <Space> <Nop>
map Y y$
nnoremap <Esc> :nohl<CR>
map gw *N
map gJ J"_x
map \w [w
map \b [b
map \e ]w
map \ge ]b
vnoremap > >gv
vnoremap < <gv
map <CR> <Action>(EditorSelectWord)
map <BS> <Action>(EditorUnSelectWord)
imap <C-V> <Action>($Paste)

map - <Action>(ShowNavBar)

map <leader>fd <Action>(GotoFile)
map <leader>fc <Action>(GotoClass)
map <leader>fg <Action>(FindInPath)
map <leader>fs <Action>(GotoSymbol)

map <leader>hb <Action>(SearchEverywhere)
map <leader>hc <Action>(GotoAction)
map <leader>hn <Action>(ActivateNotificationsToolWindow)

map grr <Action>(FindUsages)
map grR <Action>(ReSharperNavigateTo)
map gri <Action>(GotoImplementation)
map grt <Action>(GotoTypeDeclaration)
map grn <Action>(RenameElement)
map grf <Action>(Refactorings.QuickListPopupAction)
map gra <Action>(ShowIntentionActions)
map grg <Action>(Generate)
map gO <Action>(ActivateStructureToolWindow)
map gx <Action>(ClickLink)

map <leader>cd <Action>(ShowErrorDescription)
map <leader>cf <Action>(SilentCodeCleanup)
map <leader>ch <Action>(CIDR.Lang.SwitchHeaderSource)
map <leader>z <Action>(ToggleDistractionFreeMode)

map <leader>b <Action>(BuildSolutionAction)

map <leader>tt <Action>(RiderDotCoverTriggerContinuousTestingAction)
